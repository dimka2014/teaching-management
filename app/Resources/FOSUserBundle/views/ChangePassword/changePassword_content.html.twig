{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-signin' } }) }}
    <h2 class="form-signin-heading">{{ 'change_password.submit'|trans }}</h2>
    {{ form_widget(form) }}
    <div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
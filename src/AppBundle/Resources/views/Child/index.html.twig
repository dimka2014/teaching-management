{% extends '@App/layout.html.twig' %}

{% block admin_content %}
    <h2>{{ 'menu.children.name'|trans }}</h2>
    <table class="table table-bordered table-striped children-table">
        <thead>
            <tr>
                <th>{{ 'children.form.name'|trans }}</th>
                <th>{{ 'children.form.parent_phone'|trans }}</th>
                <th>{{ 'children.balance'|trans }}</th>
                <th class="table-last">{{ 'menu.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for child in children %}
                <tr>
                    <th>{{ child.name }}</th>
                    <th>{{ child.parentPhone }}</th>
                    <th>{{ child.balance }}</th>
                    <th class="table-last">
                        <a href="{{ path('child_show', { 'id': child.id }) }}" class="btn btn-default">{{ 'menu.details'|trans }}</a>
                        <a href="{{ path('child_edit', { 'id': child.id }) }}" class="btn btn-default">{{ 'menu.buttons.edit'|trans }}</a>
                        <a href="{{ path('payments_by_child_index', { 'id': child.id }) }}" class="btn btn-default">{{ 'menu.children.payments'|trans }}</a>
                    </th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ pagerfanta(children) }}
{% endblock %}
